<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"

    >



    <TextView
        android:id="@+id/parent_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:textColor="@color/accent_material_light"
        android:text="Wave Forecast"
        android:textSize="20sp" />


    <LinearLayout

        android:id="@+id/linearLayout"

        android:layout_width="407dp"
        android:layout_height="169dp"
        android:layout_below="@id/parent_rl"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="142dp"
        android:layout_marginEnd="-5dp"
        android:layout_marginRight="-5dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout

            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:background="#E0F6F4"
            android:clipToPadding="true"
            android:orientation="vertical"
            android:padding="6dp"
            android:textColor="#000000">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="Water"
                android:textSize="4sp" />

            <TextView
                android:id="@+id/fragment_water_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="19"
                android:textColor="@color/purple_500"
                android:textSize="8sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="CÂ°"
                android:textSize="4sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="82dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:background="#7CB6CF"
            android:orientation="vertical"
            android:padding="6dp"

            android:textColor="#000000">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="Wind"
                android:textSize="4sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fragment_wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:text="19"
                    android:textColor="@color/teal_200"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/fragment_wind1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_marginEnd="@+id/fragment_wind"
                    android:text="Km/H"
                    android:textColor="@color/black"
                    android:textSize="4sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="129dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fragment_Diretion_wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:text="North"
                    android:textSize="4sp" />

                <ImageView
                    android:id="@+id/fragment_image_windDirection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:adjustViewBounds="true"
                    android:maxWidth="42dp"
                    android:maxHeight="42dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/d_south" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="82dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:background="#F1F8FB"
            android:orientation="vertical"
            android:padding="6dp"

            android:textColor="#000000">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="Swell"
                android:textSize="4sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fragment_swell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:text="19"
                    android:textColor="@color/teal_200"
                    android:textSize="8sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_marginEnd="@+id/fragment_wind"
                    android:text="Km/H"
                    android:textColor="@color/black"
                    android:textSize="4sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="129dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fragment_Diretion_swell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:text="North"
                    android:textSize="4sp" />

                <ImageView
                    android:id="@+id/fragment_image_swelDirection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:adjustViewBounds="true"
                    android:maxWidth="42dp"
                    android:maxHeight="42dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/d_south" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout

            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:background="#C2EAFB"
            android:clipToPadding="true"
            android:orientation="vertical"
            android:padding="6dp"
            android:textColor="#000000">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="Wave"
                android:textSize="4sp" />

            <TextView
                android:id="@+id/fragment_wave_cm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="14"
                android:textColor="@color/abc_decor_view_status_guard"
                android:textSize="8sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="Cm"
                android:textSize="4sp" />


        </LinearLayout>


    </LinearLayout>

    <FrameLayout

        android:id="@+id/twoFragment"
        android:layout_width="278dp"
        android:layout_height="134dp"
        android:layout_below="@id/parent_rl"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        android:layout_marginBottom="6dp"
        android:padding="6dp">

    </FrameLayout>


</RelativeLayout>